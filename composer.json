{
    "name": "astrogoat/heap",
    "description": "A Heap app for Stratum",
    "keywords": [
        "astrogoat",
        "laravel",
        "heap"
    ],
    "homepage": "https://github.com/astrogoat/heap",
    "license": "MIT",
    "authors": [
        {
            "name": "Megan Miller",
            "email": "megan.miller@smoldev.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "astrogoat/stratum": "dev-develop",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.37"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Astrogoat\\Heap\\": "src",
            "Astrogoat\\Heap\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Astrogoat\\Heap\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Astrogoat\\Heap\\HeapServiceProvider"
            ],
            "aliases": {
                "Heap": "Astrogoat\\Heap\\HeapFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
